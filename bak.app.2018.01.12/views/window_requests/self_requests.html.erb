<% provide(:title, 'Check-in Window Request Index') %>

<div class="row">
        <div class="col-xs-12">
          <div class="box box-primary box-solid">
            <div class="box-header">
              <h3 class="box-title">Window Request History</h3>

             <!-- <div class="box-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                  <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                  </div>
                </div>
              </div>-->
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tbody><tr>
                  <th>Check-In ID</th>
                  <th>Branch</th>
                  <th>Bugzilla ID</th>
                  <th>Status</th>
                  <th>Files</th>
                  <th>Change Summary</th>
                  <th>Impact to Results</th>
                  <th>Tests Done</th>
                  <th>Group QA Coverage</th>
                  <th>AE Contact</th>
                  <th>Product Category</th>
                  <th>Justification for Back-porting</th>
                  <th>Impact to DB</th>
                  <th>Check-In History</th>
                  <th>Preferred Time</th>
                </tr>
		<% @user_requests.each do |user_request| %>
		<tr>
                  <td><%= user_request.username %></td>
                  <td><%= user_request.version %></td>
                  <td><%= user_request.bugid %></td>
		  <% if user_request.status == 'Opened' %>
		  	<td><span class="label label-success"><%= user_request.status %></span></td>
		  <% elsif user_request.status == 'Waiting' %>
                        <td><span class="label label-warning"><%= user_request.status %></span></td>
                  <% elsif user_request.status == 'Unavailable' %>
                        <td><span class="label label-danger"><%= user_request.status %></span></td>
		  <% end %>
                  <td><%= user_request.filetext %></td>
                  <td><%= user_request.change_summary %></td>
                  <td><%= user_request.comment %></td>
                  <td><%= user_request.reason %></td>
                  <td><%= user_request.Group_qa_coverage %></td>
                  <td><%= user_request.ae_contact %></td>
                  <td><%= user_request.product_category %></td>
                  <td><%= user_request.justification_back_porting %></td>
                  <td><%= user_request.impact_to_db %></td>
                  <td><%= user_request.history %></td>
                  <td><%= user_request.time_range %></td>
                </tr>
		<% end %>
              </tbody></table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
      </div>
